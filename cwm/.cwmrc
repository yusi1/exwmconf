# Set default Xft(3) font 
fontname "Ubuntu:pixelsize=14:bold" 
 
# Turn on sticky-group mode 
sticky no 

# Any entry here is shown in the application menu 
command term 	  "xfce4-terminal"
command lock 	  "i3lock -c 000000"
command Browser	  firefox 
command Email	  thunderbird
command Files	  caja
# command Music	  "uxterm -e cmus"
command Passwords "pass"
command Editor	  gvim
 
# Autogroup definitions 
autogroup 1 "xclock,XClock"
autogroup 2 "xfe,Xfe"
autogroup 3 "xcalc,XCalc"
autogroup 4 "Mail, thunderbird"
 
# Ignore programs by that name by not drawing borders around them. 
ignore xclock
ignore dmenu 
 
# Key bindings 
bind-key CM-r		    window-menu-label 
bind-key CM-p 	    "dmenu_run -fn 'Ubuntu Mono:size=14'"
bind-key CM-equal	window-vmaximize 
bind-key CMS-equal	window-hmaximize 
bind-key M-1		group-only-1 
bind-key M-2		group-only-2 
bind-key M-3		group-only-3 
bind-key M-4		group-only-4
bind-key M-5		group-only-5
bind-key MS-1		window-movetogroup-1 
bind-key MS-2		window-movetogroup-2 
bind-key MS-3		window-movetogroup-3 
bind-key MS-4		window-movetogroup-4
bind-key MS-5		window-movetogroup-5
unbind-key 4-o 
#These normally move from one group to another - this unbinds them so weechat doesn't break
# unbind-key M-Right
# unbind-key M-Left
 
# Mouse bindings 
bind-mouse M-2		window-lower 
bind-mouse M-3		window-resize

#Color options
color menubg gray
color font black
color activeborder red
color inactiveborder gray
color selfont white

#window options
borderwidth 2
