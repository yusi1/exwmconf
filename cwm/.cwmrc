# Set default Xft(3) font 
fontname "Ubuntu:pixelsize=14:bold" 
 
# Turn on sticky-group mode 
sticky no 

# Any entry here is shown in the application menu 
command Terminal 	  "roxterm"
command Lock 	  "i3lock -c 000000"
command Browser	  ungoogled-chromium 
command Email	  thunderbird
command Files	  caja
# command Music	  "uxterm -e cmus"
command Passwords "pass"
command Editor	  gvim
 
# Autogroup definitions 
autogroup 1 "xclock,XClock"
autogroup 2 "xfe,Xfe"
autogroup 3 "xcalc,XCalc"
autogroup 4 "Mail, thunderbird"
 
# Ignore programs by that name by not drawing borders around them. 
ignore xclock
ignore dmenu 
 
# Key bindings 
bind-key XF86AudioPlay "mpc-control.sh PAUSE"
bind-key XF86AudioNext "mpc-control.sh NEXT"
bind-key XF86AudioPrev "mpc-control.sh PREVIOUS"
bind-key XF86AudioStop "mpc-control.sh STOP"
bind-key XF86AudioRaiseVolume "sndiovolv2.sh UP 3"
bind-key XF86AudioLowerVolume "sndiovolv2.sh DOWN 3"
bind-key XF86AudioMute "sndiovolv2.sh TOGMUTE"
bind-key 4-r		    window-menu-label 
bind-key 4-p 	    "dmenu_run -fn 'Ubuntu Mono:size=26'"
bind-key 4-t        "roxterm" 
bind-key 4-f	    window-maximize
bind-key 4-x        window-close
bind-key 4-1		group-only-1 
bind-key 4-2		group-only-2 
bind-key 4-3		group-only-3 
bind-key 4-4		group-only-4
bind-key 4-5		group-only-5
bind-key 4S-1		window-movetogroup-1 
bind-key 4S-2		window-movetogroup-2 
bind-key 4S-3		window-movetogroup-3 
bind-key 4S-4		window-movetogroup-4
bind-key 4S-5		window-movetogroup-5
unbind-key 4-o 
#These normally move from one group to another - this unbinds them so weechat doesn't break
# unbind-key M-Right
# unbind-key M-Left
 
# Mouse bindings 
bind-mouse 4-1		window-move 
bind-mouse 4-2		window-lower 
bind-mouse 4-3		window-resize

#Color options
color menubg gray
color font black
color activeborder red
color inactiveborder gray
color selfont white

#window options
borderwidth 2
color activeborder lime
color inactiveborder gray
color groupborder blue
color urgencyborder yellow
color ungroupborder aqua
