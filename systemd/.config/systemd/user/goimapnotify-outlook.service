[Unit]
Description=IMAP notifier using IDLE, golang version.
ConditionPathExists=%h/.config/imapnotify/imapnotify-outlook.conf
After=network.target

[Service]
ExecStart=%h/.local/bin/goimapnotify -conf %h/.config/imapnotify/imapnotify-outlook.conf
Restart=always
RestartSec=30

[Install]
WantedBy=default.target

